{
  "name": "stackoverflow-static",
  "description": "Scrape a static copy of your own StackOverflow votes data",
  "version": "0.1",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "rpc/RpcServer.js",
      "rpc/FirefoxBackgroundRpcServer.js",
      "backend/init-common.js",
      "init.js"
    ]
  },
  "permissions": [
    "activeTab",
    "storage",
    "https://stackoverflow.com/*",
    "https://data.stackexchange.com/*"
  ],
  "web_accessible_resources": [
    "web-page/*",
    "rpc/*"
  ],
  "page_action": {
    "default_popup": "backend/execute.html",
    "show_matches": [
      "https://stackoverflow.com/*",
      "https://data.stackexchange.com/*"
    ]
  },
  "options_ui": {
    "page": "backend/options.html"
  }
}
