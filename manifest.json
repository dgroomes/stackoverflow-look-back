{
  "name": "stackoverflow-static",
  "description": "Scrape a static copy of your own StackOverflow votes data",
  "version": "0.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "init.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "webRequest"
  ],
  "host_permissions": [
    "https://stackoverflow.com/",
    "https://data.stackexchange.com/"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/get-posts-by-ids.sql"
      ],
      "matches": [
        "https://data.stackexchange.com/*"
      ]
    }
  ],
  "action": {
    "default_popup": "src/chrome-extension-mode/execute.html"
  },
  "options_page": "src/chrome-extension-mode/options.html"
}
